<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:orientation="vertical"
    android:padding="2dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Home Location"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loads on start up" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewhomeloc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="fill"
                 android:text="Home Location" />

            <Button
                android:id="@+id/buttonsethome"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Change" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="General"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Screen Always On" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keeps screen awake while app is open" />

        <Switch
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24 hours clock" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change time format to 12 or 24 hours" />

        <Switch
            android:id="@+id/button3min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meditation Bell" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rings bell at time of Agnihotra" />

        <Switch
            android:id="@+id/switchcountd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Countdown" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display countdown or clock in centre" />

        <Switch
            android:id="@+id/switchalarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agnihotra Alarm" />

        <TextView
            android:id="@+id/textViewalarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set alarm to ring before agnihotra" />


    </LinearLayout>

</LinearLayout>
    </ScrollView>